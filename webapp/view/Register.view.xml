<mvc:View
    controllerName="universitystudentlifecycle.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:unified="sap.ui.unified"
>
    <Page
        id="register"
        title="{i18n>title}"
    >
        <content>
            <l:Grid
                id="_IDGenGrid1"
                defaultSpan="L6 M6 S12"
                hSpacing="2"
                vSpacing="1"
                width="100%"
            >
                <!-- ================= Left: Form ================= -->
                <l:content>
                    <VBox
                        id="_IDGenVBox5"
                        class="sapUiSmallMargin"
                    >
                        <!-- Contact Info Section -->
                        <Title
                            id="_IDGenTitlePersonal"
                            text="Personal Info"
                            level="H1"
                        />
                        <!-- Row 1: First + Last Name -->
                        <l:Grid
                            id="_IDGenGrid2"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="firstName"
                                    placeholder="First Name"
                                    required="true"
                                />
                                <Input
                                    id="lastName"
                                    placeholder="Last Name"
                                    required="true"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Row 2: DOB + Gender -->
                        <l:Grid
                            id="_IDGenGrid3"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="dob"
                                    placeholder="Date of Birth (YYYY-MM-DD)"
                                    type="Date"
                                />
                                <Select
                                    id="gender"
                                    forceSelection="false"
                                    width="100%"
                                >
                                    <items>
                                        <core:Item
                                            id="_IDGenItem"
                                            key="Male"
                                            text="Male"
                                        />
                                        <core:Item
                                            id="_IDGenItem1"
                                            key="Female"
                                            text="Female"
                                        />
                                        <core:Item
                                            id="_IDGenItem2"
                                            key="Other"
                                            text="Other"
                                        />
                                    </items>
                                </Select>
                            </l:content>
                        </l:Grid>

                        <!-- Row 3: Enrollment + Program -->
                        <l:Grid
                            id="_IDGenGrid4"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="enrollmentId"
                                    placeholder="Enrollment ID"
                                />
                                <Input
                                    id="program"
                                    placeholder="Program"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Contact Info Section -->
                        <Title
                            id="_IDGenTitle1"
                            text="Contact Info"
                            level="H3"
                        />

                        <!-- Row 5: Email + Phone -->
                        <l:Grid
                            id="_IDGenGrid6"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="country"
                                    placeholder="Country"
                                />
                                <Input
                                    id="phone"
                                    placeholder="Phone Number"
                                    type="Tel"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Row 6: Street + City -->
                        <l:Grid
                            id="_IDGenGrid7"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="street"
                                    placeholder="Street"
                                />
                                <Input
                                    id="city"
                                    placeholder="City"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Row 7: State + Zip -->
                        <l:Grid
                            id="_IDGenGrid8"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="state"
                                    placeholder="State"
                                />
                                <Input
                                    id="zipCode"
                                    placeholder="Zip Code"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Row 8: Country (full width) -->
                        <l:Grid
                            id="_IDGenGrid9"
                            defaultSpan="L12 M12 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="email"
                                    placeholder="Email"
                                    type="Email"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Emergency Contact Section -->
                        <Title
                            id="_IDGenTitle2"
                            text="Emergency Contact"
                            level="H3"
                        />

                        <!-- Row 9: Name + Relation -->
                        <l:Grid
                            id="_IDGenGrid10"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="emergencyName"
                                    placeholder="Emergency Contact Name"
                                />
                                <Input
                                    id="relation"
                                    placeholder="Relation"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Row 10: Phone + Email -->
                        <l:Grid
                            id="_IDGenGrid11"
                            defaultSpan="L6 M6 S12"
                            width="100%"
                        >
                            <l:content>
                                <Input
                                    id="emergencyPhone"
                                    placeholder="Emergency Phone"
                                />
                                <Input
                                    id="emergencyEmail"
                                    placeholder="Emergency Email"
                                    type="Email"
                                />
                            </l:content>
                        </l:Grid>

                        <!-- Terms + Submit -->
                        <CheckBox
                            id="terms"
                            text="I have read and understood the Terms and Conditions"
                        />
                        <Button
                            id="_IDGenButton1"
                            text="Submit"
                            type="Emphasized"
                            press=".onSubmit"
                        />
                    </VBox>
                </l:content>

                <!-- ================= Right: Already Registered ================= -->
                <l:content>
                    <VBox
                        id="_IDGenVBox6"
                        class="sapUiMediumMarginTop sapUiSmallMargin"
                    >
                        <Panel
                            id="_IDGenPanel"
                            width="80%"
                        >
                            <content>
                                <!-- ID Documents Upload -->
                                <VBox
                                    id="_IDGenVBox7"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <Label
                                        id="_IDGenLabel2"
                                        text="Government ID Documents"
                                    />
                                    <unified:FileUploader
                                        id="idDocsUpload"
                                        name="idDocs"
                                        tooltip="Select ID documents (PDF, Images - Max 2MB)"
                                        fileType="pdf,jpg,jpeg,png"
                                        maximumFileSize="1"
                                        change="onFileChange"
                                        typeMissmatch="onTypeMismatch"
                                        fileSizeExceed="onFileSizeExceed"
                                        width="100%"
                                    />
                                </VBox>

                                <!-- Upload Instructions -->
                                <MessageStrip
                                    id="_IDGenMessageStrip"
                                    text="Supported formats: PDF, DOC, JPG, PNG. Maximum file sizes: ID (2MB)"
                                    type="Information"
                                    class="sapUiTinyMarginTop"
                                />
                            </content>
                        </Panel>
                    </VBox>
                </l:content>
            </l:Grid>
        </content>
    </Page>
</mvc:View>
