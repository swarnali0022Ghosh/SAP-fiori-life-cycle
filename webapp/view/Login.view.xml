<mvc:View
    controllerName="universitystudentlifecycle.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="login"
        title="{i18n>title}"
    >
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin sapUiContentPadding sapUiResponsiveContentPadding sapUiLargeMarginBegin sapUiLargeMarginEnd"
                alignItems="Center"
                justifyContent="Center"
            >
                <l:Grid
                    id="_IDGenGrid"
                    defaultSpan="XL6 L6 M12 S12"
                    width="100%"
                    class="sapUiResponsiveContentPadding"
                >
                    <!-- Image Section -->
                    <VBox
                        id="_IDGenVBox2"
                        alignItems="Center"
                        class="sapUiMediumMargin sapUiResponsiveMargin sapUiMediumMarginBegin sapUiMediumMarginEnd"
                    >
                        <Image
                            id="_IDGenImage"
                            src="img/loginpage.png"
                            width="500px"
                        />
                    </VBox>

                    <!-- Form Section -->
                    <VBox
                        id="_IDGenVBox3"
                        alignItems="Center"
                        class="sapUiMediumMargin sapUiResponsiveMargin sapUiMediumMarginBegin sapUiMediumMarginEnd"
                    >
                        <VBox
                            id="_IDGenVBox4"
                            width="400px"
                            class="sapUiResponsiveMargin sapUiContentPadding"
                        >
                            <Title
                                id="_IDGenTitle"
                                text="{i18n>title}"
                                level="H2"
                                class="sapUiSmallMarginBottom"
                            />

                            <Label
                                id="_IDGenLabel"
                                text="User *"
                            />
                            <Input
                                id="userInput"
                                value="{/username}"
                                required="true"
                                width="100%"
                            />

                            <Label
                                id="_IDGenLabel1"
                                text="Password *"
                            />
                            <Input
                                id="passwordInput"
                                type="Password"
                                value="{/password}"
                                required="true"
                                width="100%"
                            />

                            <Button
                                id="_IDGenButton"
                                text="Log On"
                                type="Emphasized"
                                press="onLoginPress"
                                class="sapUiSmallMarginTop"
                            />

                            <HBox
                                id="_IDGenHBox2"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Text
                                    id="_IDGenText"
                                    text="New here?"
                                />
                                <Link
                                    id="_IDGenLink"
                                    text="Register"
                                    press="onRegisterPress"
                                    class="sapUiTinyMarginBegin"
                                />
                            </HBox>
                        </VBox>
                    </VBox>
                </l:Grid>
            </VBox>
        </content>
    </Page>
</mvc:View>
